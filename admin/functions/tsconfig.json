{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true        // ðŸ‘ˆ add this
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"               // ðŸ‘ˆ compile only backend src
  ],
  "exclude": [
    "../node_modules",           // ðŸ‘ˆ prevent crawling frontend node_modules
    "**/*.test.ts"
  ]
}
